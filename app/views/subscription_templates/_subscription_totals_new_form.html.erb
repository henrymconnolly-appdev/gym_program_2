<form action="/create_total_from_subscription" method="post">

  <div class="form-group">
    <label for="profile_id">
      Profile
    </label>

    <%= select_tag(:profile_id, options_from_collection_for_select(Profile.all, :id, :user_id, @total.profile_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="feed_id">
      Feed
    </label>

    <%= select_tag(:feed_id, options_from_collection_for_select(Feed.all, :id, :user_id, @total.feed_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="lift_total">
      Lift total
    </label>

    <input type="text" id="lift_total" name="lift_total" class="form-control" value="<%= @total.lift_total %>">
  </div>

  <div class="form-group">
    <label for="lift_date">
      Lift date
    </label>

    <input type="text" id="lift_date" name="lift_date" class="form-control" value="<%= @total.lift_date %>">
  </div>

  <input type="hidden" name="subscription_id" value="<%= @subscription.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create total
  </button>
</form>
