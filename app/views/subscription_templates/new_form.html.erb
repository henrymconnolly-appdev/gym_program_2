<h1>
  Add a new subscription
</h1>


<hr>

<form action="/create_subscription" method="post">

  <div class="form-group">
    <label for="feed_id">
      Feed
    </label>

    <%= select_tag(:feed_id, options_from_collection_for_select(Feed.all, :id, :user_id, @subscription.feed_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create subscription
  </button>
</form>

<hr>

<a href="/subscriptions">
  Go back
</a>
