<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Totals

    <a data-toggle="collapse" href="#subscription_totals_new_form">
      Add total
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @subscription.totals.each do |total| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/totals/<%= total.id %>">
          <%= total.profile_id %>
        </a>

        <a href="/delete_total_from_subscription/<%= total.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="subscription_totals_new_form">
        <%= render partial: "subscription_templates/subscription_totals_new_form" %>
      </div>
    </div>

  </ul>
</div>
