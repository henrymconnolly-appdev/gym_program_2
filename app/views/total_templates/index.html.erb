<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All totals
    </h1>

    <a href="/totals/new" class="btn btn-block btn-outline-secondary">
      Add a new total
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "total_templates/totals_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Profile
        </th>

        <th>
          Feed
        </th>

        <th>
          Lift total
        </th>

        <th>
          Lift date
        </th>

        <th>
          Subscription
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @totals.each do |total| %>
      <tr>
        <td>
          <%= total.id %>
        </td>

        <td>
          <% if total.profile.present? %>
            <a href="/profiles/<%= total.profile.id %>">
              <%= total.profile.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if total.feed.present? %>
            <a href="/feeds/<%= total.feed.id %>">
              <%= total.feed.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= total.lift_total %>
        </td>

        <td>
          <%= total.lift_date %>
        </td>

        <td>
          <% if total.subscription.present? %>
            <a href="/subscriptions/<%= total.subscription.id %>">
              <%= total.subscription.feed_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(total.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(total.updated_at) %> ago
        </td>

        <td>
          <a href="/totals/<%= total.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @totals, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
