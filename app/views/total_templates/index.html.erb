<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All totals
    </h1>

    <a href="/totals/new" class="btn btn-block btn-outline-secondary">
      Add a new total
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Profile
        </th>

        <th>
          Feed
        </th>

        <th>
          Lift total
        </th>

        <th>
          Lift date
        </th>

        <th>
          Subscription
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @totals.each do |total| %>
      <tr>
        <!-- Display total.id start -->
        <td>
          <%= total.id %>
        </td>
        <!-- Display total.id end -->

        <!-- Display total.profile_id start -->
        <td>
          <%= total.profile.user_id %>
        </td>
        <!-- Display total.profile_id end -->

        <!-- Display total.feed_id start -->
        <td>
          <%= total.feed_id %>
        </td>
        <!-- Display total.feed_id end -->

        <!-- Display total.lift_total start -->
        <td>
          <%= total.lift_total %>
        </td>
        <!-- Display total.lift_total end -->

        <!-- Display total.lift_date start -->
        <td>
          <%= total.lift_date %>
        </td>
        <!-- Display total.lift_date end -->

        <!-- Display total.subscription_id start -->
        <td>
          <%= total.subscription_id %>
        </td>
        <!-- Display total.subscription_id end -->

        <!-- Display total.created_at start -->
        <td>
          <%= time_ago_in_words(total.created_at) %> ago
        </td>
        <!-- Display total.created_at end -->

        <!-- Display total.updated_at start -->
        <td>
          <%= time_ago_in_words(total.updated_at) %> ago
        </td>
        <!-- Display total.updated_at end -->

        <td>
          <a href="/totals/<%= total.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
