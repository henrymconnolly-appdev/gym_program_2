<%= search_form_for @q, :class => collapse_search_form, :id => "totals_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :lift_date, "Lift date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='lift_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :lift_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Lift date greater than or equal to", :data => {:target => '#lift_dategteqPicker'} %>
          <div class="input-group-append" data-target='#lift_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='lift_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :lift_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Lift date less than or equal to", :data => {:target => '#lift_datelteqPicker'} %>
          <div class="input-group-append" data-target='#lift_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#lift_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#lift_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#lift_dategteqPicker').on("dp.change", function (e) {
              $('#lift_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#lift_datelteqPicker').on("dp.change", function (e) {
              $('#lift_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :lift_total_cont, "Lift total contains" %>
    <%= f.text_field :lift_total_cont, :class => "form-control", :placeholder => "Lift total contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>




  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/totals" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#totals_filters">
  Show filters
</a>
