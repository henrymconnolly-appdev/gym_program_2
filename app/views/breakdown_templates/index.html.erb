<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All breakdowns
    </h1>

    <a href="/breakdowns/new" class="btn btn-block btn-outline-secondary">
      Add a new breakdown
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "breakdown_templates/breakdowns_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Total
        </th>

        <th>
          Squat
        </th>

        <th>
          Benchpress
        </th>

        <th>
          Deadlift
        </th>

        <th>
          Explained lift total
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @breakdowns.each do |breakdown| %>
      <tr>
        <td>
          <%= breakdown.id %>
        </td>

        <td>
          <% if breakdown.total.present? %>
            <a href="/totals/<%= breakdown.total.id %>">
              <%= breakdown.total.profile_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= breakdown.squat %>
        </td>

        <td>
          <%= breakdown.benchpress %>
        </td>

        <td>
          <%= breakdown.deadlift %>
        </td>

        <td>
          <%= breakdown.explained_lift_total %>
        </td>

        <td>
          <%= time_ago_in_words(breakdown.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(breakdown.updated_at) %> ago
        </td>

        <td>
          <a href="/breakdowns/<%= breakdown.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @breakdowns, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
