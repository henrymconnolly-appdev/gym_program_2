<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All breakdowns
    </h1>

    <a href="/breakdowns/new" class="btn btn-block btn-outline-secondary">
      Add a new breakdown
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Total
        </th>

        <th>
          Squat
        </th>

        <th>
          Benchpress
        </th>

        <th>
          Deadlift
        </th>

        <th>
          Explained lift total
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @breakdowns.each do |breakdown| %>
      <tr>
        <!-- Display breakdown.id start -->
        <td>
          <%= breakdown.id %>
        </td>
        <!-- Display breakdown.id end -->

        <!-- Display breakdown.total_id start -->
        <td>
          <%= breakdown.total_id %>
        </td>
        <!-- Display breakdown.total_id end -->

        <!-- Display breakdown.squat start -->
        <td>
          <%= breakdown.squat %>
        </td>
        <!-- Display breakdown.squat end -->

        <!-- Display breakdown.benchpress start -->
        <td>
          <%= breakdown.benchpress %>
        </td>
        <!-- Display breakdown.benchpress end -->

        <!-- Display breakdown.deadlift start -->
        <td>
          <%= breakdown.deadlift %>
        </td>
        <!-- Display breakdown.deadlift end -->

        <!-- Display breakdown.explained_lift_total start -->
        <td>
          <%= breakdown.explained_lift_total %>
        </td>
        <!-- Display breakdown.explained_lift_total end -->

        <!-- Display breakdown.created_at start -->
        <td>
          <%= time_ago_in_words(breakdown.created_at) %> ago
        </td>
        <!-- Display breakdown.created_at end -->

        <!-- Display breakdown.updated_at start -->
        <td>
          <%= time_ago_in_words(breakdown.updated_at) %> ago
        </td>
        <!-- Display breakdown.updated_at end -->

        <td>
          <a href="/breakdowns/<%= breakdown.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
