<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Breakdown #<%= @breakdown.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/breakdowns" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/breakdowns/<%= @breakdown.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit breakdown
        </a>
      </div>

      <div class="col">
        <a href="/delete_breakdown/<%= @breakdown.id %>" class="btn btn-block btn-outline-secondary">
          Delete breakdown
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Total
      </dt>
      <dd>
        <% if @breakdown.total.present? %>
          <a href="/totals/<%= @breakdown.total_id %>">
            <%= @breakdown.total.profile_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Squat
      </dt>
      <dd>
        <%= @breakdown.squat %>
      </dd>

      <dt>
        Benchpress
      </dt>
      <dd>
        <%= @breakdown.benchpress %>
      </dd>

      <dt>
        Deadlift
      </dt>
      <dd>
        <%= @breakdown.deadlift %>
      </dd>

      <dt>
        Explained lift total
      </dt>
      <dd>
        <%= @breakdown.explained_lift_total %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@breakdown.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@breakdown.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

