<h1>
  Add a new breakdown
</h1>


<hr>

<form action="/create_breakdown" method="post">

  <div class="form-group">
    <label for="total_id">
      Total
    </label>

    <%= select_tag(:total_id, options_from_collection_for_select(Total.all, :id, :profile_id, @breakdown.total_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="squat">
      Squat
    </label>

    <input type="text" id="squat" name="squat" class="form-control">
  </div>

  <div class="form-group">
    <label for="benchpress">
      Benchpress
    </label>

    <input type="text" id="benchpress" name="benchpress" class="form-control">
  </div>

  <div class="form-group">
    <label for="deadlift">
      Deadlift
    </label>

    <input type="text" id="deadlift" name="deadlift" class="form-control">
  </div>

  <div class="form-group">
    <label for="explained_lift_total">
      Explained lift total
    </label>

    <input type="text" id="explained_lift_total" name="explained_lift_total" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create breakdown
  </button>
</form>

<hr>

<a href="/breakdowns">
  Go back
</a>
