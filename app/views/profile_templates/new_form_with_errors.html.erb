<% if @profile.present? %>
  <% if @profile.errors.any? %>
    <% @profile.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new profile
</h1>


<hr>

<form action="/create_profile" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="personal_lift_totals">
      Personal lift totals
    </label>

    <input type="text" id="personal_lift_totals" name="personal_lift_totals" class="form-control" value="<%= @profile.personal_lift_totals %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create profile
  </button>
</form>

<hr>

<a href="/profiles">
  Go back
</a>
