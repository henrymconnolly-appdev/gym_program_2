<!-- Validation failure messages -->
<% if @profile.present? %>
  <% if @profile.errors.any? %>
    <% @profile.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new profile
</h1>


<hr>

<!-- Form profile start -->
<form action="/create_profile" method="post">
<!-- Form profile end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @profile.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for personal_lift_totals start -->
  <div class="form-group">
    <label for="personal_lift_totals">
      Personal lift totals
    </label>

    <!-- Input for personal_lift_totals start -->
    <input type="text" id="personal_lift_totals" name="personal_lift_totals" class="form-control" value="<%= @profile.personal_lift_totals %>">
    <!-- Input for personal_lift_totals end -->
  </div>
  <!-- Label and input for personal_lift_totals end -->

  <button class="btn btn-block btn-outline-secondary">
    Create profile
  </button>
</form>

<hr>

<a href="/profiles">
  Go back
</a>
